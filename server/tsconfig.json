{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "rootDir": "./",
    "outDir": "./dist",
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node16"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "mailtrap"
  ]
}
